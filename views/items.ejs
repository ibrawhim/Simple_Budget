<body>
    <h1 class="text-decoration-underline text-center">Simple Budget App</h1>
    <div class="col-lg-8 mx-auto container-fluid">
        <div class="row">
            <h3>Add Items</h3>
            <form action="/details" method="post">
                <input type="text" class="form-control my-2" placeholder="item" name="item">
                <input type="text" class="form-control my-2" placeholder="price" name="price">
                <input type="text" class="form-control my-2" placeholder="quantity" name="quantity">
                <button class="btn btn-dark my-2 w-100">Add Item</button>
            </form>
        </div>
    </div>
    <a style="margin-left: 250px;"  class="text-dark" href="./cart">Go to Cart</a>
</body>
